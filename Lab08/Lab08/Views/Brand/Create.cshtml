@model Lab08.Models.Brand

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <h4 class="card-title text-center mb-4 fw-bold text-uppercase">
                        @(Model == null || Model.BrandId == 0 ? "Thêm Thương Hiệu" : "Cập Nhật Thương Hiệu")
                    </h4>

                    <form asp-action="@(Model == null || Model.BrandId == 0 ? "Create" : "Edit")">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        @if (Model != null && Model.BrandId != 0)
                        {
                            <input type="hidden" asp-for="BrandId" />
                        }

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Tên hãng xe" />
                            <label asp-for="Name">Tên thương hiệu</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Country" class="form-control" placeholder="Quốc gia" />
                            <label asp-for="Country">Quốc gia</label>
                            <span asp-validation-for="Country" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-check-circle"></i> Lưu dữ liệu
                            </button>
                            <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none text-center">
                                Quay lại danh sách
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>