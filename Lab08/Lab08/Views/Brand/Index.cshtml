@model IEnumerable<Lab08.Models.Brand>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-primary fw-bold"><i class="bi bi-patch-check"></i> QUẢN LÝ THƯƠNG HIỆU</h5>
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-lg"></i> Thêm Thương Hiệu
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 10%">ID</th>
                            <th style="width: 40%">Tên Thương Hiệu</th>
                            <th style="width: 30%">Quốc Gia</th>
                            <th style="width: 20%" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="text-muted fw-bold">#@item.BrandId</span></td>
                                <td><span class="fw-bold text-dark">@item.Name</span></td>
                                <td>
                                    <span class="badge rounded-pill bg-light text-dark border">
                                        <i class="bi bi-geo-alt text-danger"></i> @(item.Country ?? "N/A")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-outline-warning btn-sm" title="Chỉnh sửa">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-outline-danger btn-sm"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa thương hiệu này?')" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>